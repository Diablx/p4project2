<Page x:Class="P4Project2.Views.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P4Project2.Views"
      mc:Ignorable="d"
      Title="Menu">

    <Grid>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Click="Switch_To_CharacterCreationView" Style="{StaticResource menu_Button}" Content="CREATE CHARACTER"/>
            <Button Click="Switch_To_CharacterSelectionView" Style="{StaticResource menu_Button}" Content="CHOOSE CHARACTER"/>
            <Button Click="CloseClient" Style="{StaticResource menu_Button}" Content="END"/>
        </StackPanel>
    </Grid>
</Page>
